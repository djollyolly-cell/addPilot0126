# Convex
VITE_CONVEX_URL=https://your-deployment.convex.cloud

# Redirect URI for VK OAuth (must match VK app settings)
VITE_REDIRECT_URI=https://aipilot.by/auth/callback

# VK OAuth (set in Convex environment variables)
VK_CLIENT_ID=your_vk_app_id
VK_CLIENT_SECRET=your_vk_app_secret

# Telegram Bot (set in Convex environment variables)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
# Webhook secret for CSRF protection (1-256 chars, A-Za-z0-9_-)
# Generate with: openssl rand -hex 32
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_token

# Telegram Bot username (for deep link in frontend)
VITE_TELEGRAM_BOT_USERNAME=Addpilot_bot

# Email Service - Yandex SMTP (set in Convex environment variables)
# 1. Use your Yandex email
# 2. Create app password at https://id.yandex.ru/security/app-passwords
YANDEX_EMAIL=your-email@yandex.ru
YANDEX_APP_PASSWORD=your-app-password

# bePaid Payment Gateway (set in Convex environment variables)
# Get credentials from bePaid dashboard: https://merchant.bepaid.by
BEPAID_SHOP_ID=your_shop_id
BEPAID_SECRET_KEY=your_secret_key
BEPAID_TEST_MODE=true

# Convex HTTP Site URL (for webhook callbacks)
# Find it in Convex Dashboard → Settings → URL & Deploy Key → HTTP Actions URL
CONVEX_SITE_URL=https://your-site.convex.site
