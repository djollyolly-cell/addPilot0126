# Copy to .env.prod and fill in your values
# For Dokploy: set these in Dokploy Environment Variables

# Domain (your production domain)
DOMAIN=aipilot.by

# Convex URLs (self-hosted on your server)
VITE_CONVEX_URL=https://convex.aipilot.by
VITE_CONVEX_SITE_URL=https://api.aipilot.by
CONVEX_SITE_URL=https://api.aipilot.by
CONVEX_CLOUD_URL=https://convex.aipilot.by

# Convex Admin Key (generate with init script)
CONVEX_ADMIN_KEY=

# VK OAuth (PROD)
VK_CLIENT_ID=your_prod_vk_app_id
VK_CLIENT_SECRET=your_prod_vk_app_secret
VITE_REDIRECT_URI=https://aipilot.by/auth/callback

# Telegram Bot (PROD)
TELEGRAM_BOT_TOKEN=your_prod_telegram_bot_token
TELEGRAM_WEBHOOK_SECRET=your_prod_webhook_secret
VITE_TELEGRAM_BOT_USERNAME=Addpilot_bot

# Email Service
YANDEX_EMAIL=your-prod@yandex.ru
YANDEX_APP_PASSWORD=your_prod_app_password

# bePaid (PRODUCTION)
BEPAID_SHOP_ID=your_prod_shop_id
BEPAID_SECRET_KEY=your_prod_secret_key
BEPAID_TEST_MODE=false
